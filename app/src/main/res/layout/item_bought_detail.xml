<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/small_margin_5dp"
    android:layout_margin="@dimen/standard_margin_8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/root_count_item_buy_detail">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_item_buy_detail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sample2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_item_buy_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        tools:text="کفش نایکی مخصوص دویدن مدل ایر مکس پلاس 3"
        android:textSize="@dimen/standard_font_size_14sp"
        android:textColor="@color/black"
        android:minLines="3"
        android:maxWidth="200dp"
        app:layout_constraintEnd_toStartOf="@+id/img_item_buy_detail"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/product_price_item_buy_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/toman2"
        android:textColor="@color/black"
        android:textSize="@dimen/standard_font_size_14sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_item_buy_detail"
        app:layout_constraintStart_toEndOf="@+id/toman2"
        app:layout_constraintTop_toBottomOf="@+id/title_item_buy_detail"
        tools:text="2,100,000" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/toman2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/Toman"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/product_price_item_buy_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/product_price_item_buy_detail" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_comment_materialButton_item_buy_detail"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/white"
            android:text="@string/add_comment_on_this_product"
            android:textColor="@color/blue"
            app:icon="@drawable/ic_add_comment"
            app:iconGravity="end"
            app:iconTint="@color/blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_price_item_buy_detail" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="تعداد:"
        app:layout_constraintBottom_toBottomOf="@+id/count_item_buy_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/count_item_buy_detail"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/count_item_buy_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/add_comment_materialButton_item_buy_detail"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/add_comment_materialButton_item_buy_detail"
        tools:text="2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>