<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin_5dp"
    >


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_waiting_for_comment_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sample2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_waiting_for_comment_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_font_size_16sp"
        app:layout_constraintBottom_toTopOf="@+id/item_waiting_for_comment_add"
        app:layout_constraintEnd_toStartOf="@+id/item_waiting_for_comment_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="کفش نایکی مدل 2" />

    <LinearLayout
        android:id="@+id/item_waiting_for_comment_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:srcCompat="@drawable/ic_more"
        android:tint="@color/blue"
        android:rotation="90"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/Add_comment_for_this"
        android:textColor="@color/blue"
        android:textSize="@dimen/standard_font_size_14sp"
        android:layout_gravity="center_vertical" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>