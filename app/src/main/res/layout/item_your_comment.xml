<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin_5dp"
    app:cardCornerRadius="@dimen/small_margin_5dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_your_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_font_size_16sp"
            app:layout_constraintEnd_toEndOf="@+id/item_your_comment_product_name"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_your_comment_product_name"
            tools:text="بسیار شیک و اسپرت" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_your_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="@dimen/small_font_size_12sp"
            app:layout_constraintBottom_toTopOf="@+id/item_your_comment_content"
            app:layout_constraintEnd_toEndOf="@+id/item_your_comment_title"
            app:layout_constraintTop_toBottomOf="@+id/item_your_comment_title"
            tools:text="چهارشنبه 20 اسفند 99" />

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/item_your_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/large_margin_10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_font_size_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_your_comment_image"
            tools:text="@string/Lorem_Ipsum_farsi" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_your_comment_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sample2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_your_comment_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:textSize="@dimen/small_font_size_12sp"
            app:layout_constraintEnd_toStartOf="@+id/item_your_comment_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="کفش نایکی مدل 2" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_your_comment_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_your_comment_product_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_your_comment_product_name"
            app:srcCompat="@drawable/ic_close" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>