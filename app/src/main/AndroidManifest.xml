<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nikeshop">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".androidWrapper.App"
        android:allowBackup="true"
        android:icon="@drawable/nike_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/nike_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.NikeShop">
        <activity android:name=".activities.ReceiverActivity" />
        <activity android:name=".activities.CommentActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FavouriteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.DetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.QuestionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CategoryActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ArchiveActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>